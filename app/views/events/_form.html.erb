<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, 
                      autofocus: true, 
                      required: true,
                      placeholder: "Surprise Party",  
                      class: "input" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, 
                    placeholder: "Description or other important details",
                    class: "input text-input" %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, 
                      placeholder: "My house, restaurant, etc.", 
                      required: true,
                      class: "input" %>
  </div>

  <div class="field">
    <%= f.label "Start Date and Time" %><br />
    <%= f.datetime_field :start_time,
                          required: true,
                          class: "input" %>
  </div>

  <div class="field">
    <%= f.label "End Date and Time" %><br />
    <%= f.datetime_field :end_time, 
                          required: true, 
                          class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class:"button is-info is-fullwidth" %>
  </div>
<% end %>