<div class="column is-half">
  <div class="box has-background-light">
    <h4 class="title is-4">
      <%= event.title %>
    </h4>
    <div class="block">
      <p>
        <span class="icon">
          <i class="fa fa-calendar" aria-hidden="true"></i>
        </span>
        <%= event.start_date.strftime("%b %-d, %Y")%>
        <%= event.start_time.strftime(" at %l:%M %P")%> -
        <% if (event.start_date - event.end_date).to_i == 0 %>
          <%= event.end_time.strftime("%l:%M %P") %>
        <% else %>
          <%= event.end_date.strftime("%b %-d, %Y")%>
          <%= event.end_time.strftime(" at %l:%M %P")%>
        <% end %>
      </p>
    </div>
    <div class="buttons">
      <%= link_to 'Event Details', event_path(id: event.id), class: "button is-link is-outlined is-fullwidth" %>
    </div>
  </div>
</div>
