<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <h2 class="title is-3">Account Set-Up:</h2>
        <p>
          <%= @user.email %>
          <%= link_to "Edit", edit_user_registration_path %>
        </p>

        <h2 class="title is-3">Created Parties:</h2>
        <% @user.created_events.each do |event| %>
          <div>
            <p><%= event.title %></p>
            <p><%= event.description %></p>
            <p><%= event.location %></p>
            <% if (event.start_time.to_date - event.end_time.to_date).to_i == 0 %>
              <p><%= event.start_time.strftime("%b %-d, %Y at %l:%M %P")%> - <%= event.end_time.strftime("%l:%M %P")%></p>
            <% else %>
              <p><%= event.start_time.strftime("%b %-d, %Y at %l:%M %P")%> - <%= event.end_time.strftime("%b %-d, %Y at %l:%M %P")%></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
