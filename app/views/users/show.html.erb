<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-9">
        <h3 class="title is-3">My Parties:</h3>
        <h4 class="title is-4">Upcoming</h4>
        <div class="columns is-multiline">
          <%= render @user.created_events.upcoming %>
        </div>
        <h4 class="title is-4">Past</h4>
        <div class="columns is-multiline">
          <%= render @user.created_events.past %>
        </div>
        <hr>
        <h3 class="title is-3">My Invited Parties:</h3>
        <h4 class="title is-4">Upcoming</h4>
        <div class="columns is-multiline">
          <%= render @user.attended_events.upcoming %>
        </div>
        <h4 class="title is-4">Past</h4>
        <div class="columns is-multiline">
          <%= render @user.attended_events.past %>
        </div>
      </div>
    </div>
  </div>
</section>
